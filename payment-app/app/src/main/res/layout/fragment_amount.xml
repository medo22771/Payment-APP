<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yelloco.payment.utils.fonts.SourceSansProBold
        android:id="@+id/text_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        style="@style/YelloTextView" />

    <com.yelloco.payment.utils.fonts.SourceSansProBold
        android:id="@+id/text_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_type"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="@string/msg_d2"
        style="@style/YelloTextView" />

    <com.blackcat.currencyedittext.CurrencyEditText
        android:id="@+id/edit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_instructions"
        android:layout_centerHorizontal="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        style="@style/YelloTextView"
        android:textStyle="bold"
        app:allow_negative_values="true" />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_amount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/Button1"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button1_background_selector" />

        <Button
            android:id="@+id/Button2"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button2_background_selector" />

        <Button
            android:id="@+id/Button3"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:background="@drawable/button3_background_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout02"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_pin_button">

        <Button
            android:id="@+id/Button4"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button4_background_selector" />

        <Button
            android:id="@+id/Button5"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button5_background_selector" />

        <Button
            android:id="@+id/Button6"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:background="@drawable/button6_background_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_pin_button">

        <Button
            android:id="@+id/Button7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button7_background_selector" />

        <Button
            android:id="@+id/Button8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:background="@drawable/button8_background_selector" />

        <Button
            android:id="@+id/Button9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:background="@drawable/button9_background_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_pin_button"
        android:gravity="center">

        <Button
            android:id="@+id/Button0"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button00_background_selector" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/amount_buttons_bottom_margin">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_go_back_insert"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:src="@drawable/ic_close_black_24dp"
            app:backgroundTint="@color/colorRed"
            app:elevation="0dp"
            app:rippleColor="@color/colorBlack" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/Modifier"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:layout_marginEnd="@dimen/margin_pin_button"
            android:src="@drawable/ic_arrow_back_black_24dp"
            app:backgroundTint="@color/colorYellow"
            app:elevation="0dp"
            app:rippleColor="@color/colorBlack" />
        
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/bt_confirmAmount"
            android:layout_width="@dimen/size_pin_button"
            android:layout_height="@dimen/size_pin_button"
            android:src="@drawable/ic_done_black_24dp"
            app:backgroundTint="@color/colorGreen"
            app:elevation="0dp"
            app:rippleColor="@color/colorBlack" />
    </LinearLayout>
</RelativeLayout>
