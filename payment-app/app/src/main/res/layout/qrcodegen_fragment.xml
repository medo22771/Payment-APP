<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFF">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/QRBarCodeContainer"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:id="@+id/QRCodeImage"
            android:src="@mipmap/ic_launcher"
            android:tag="NULL">

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/QRBarCodeContainer"
        android:layout_marginTop="50dp"
        android:id="@+id/ActionContainer"
        android:gravity="center"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thank you for your business.To download the electronic receipt please scan the image above with your mobile"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_weight="1">

        </TextView>


        <Button
            android:id="@+id/DwnBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download Receipt"
            android:textColor="#000"
            android:layout_weight="1"
            android:layout_marginTop="10dp">

        </Button>

    </LinearLayout>

</RelativeLayout>