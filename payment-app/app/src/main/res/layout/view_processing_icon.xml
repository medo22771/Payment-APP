<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_processing_icon"
        android:layout_width="@dimen/size_processing_icon"
        android:layout_height="@dimen/size_processing_icon"
        android:layout_marginStart="10dp"
        android:src="@drawable/yello_hand"
        android:tint="@color/colorYellow" />

    <ImageView
        android:id="@+id/iv_processing_text"
        android:layout_width="@dimen/size_processing_icon"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/yello_text"
        android:tint="@color/colorYellow" />
</LinearLayout>